<% if !current_admin %>
<div class="col-lg-12 text-right">
  <%= link_to schedulePickup_path do %>
    <span class="new-transaction">+</span>
  <% end %>
</div>
<% end %>

<%= form_tag transactions_path , :method => 'get' do %>
    <p>
      <b>Search transactions by :</b>
      <% if current_admin %>
          <%= text_field_tag :search_name, params[:search_name] ,    placeholder: 'Name' %>
      <% end %>
      <%= text_field_tag :search_phone, params[:search_phone],   placeholder: 'Phone' %>
      <%= text_field_tag :search_amount, params[:search_amount], placeholder: 'Amount' %>
      <%= text_field_tag :search_status, params[:search_status], placeholder: 'Status' %>
      <%= text_field_tag :search_date, params[:search_date], placeholder: 'date' %>
      <%= submit_tag 'Search', :name => nil %>
    </p>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Phonenumber</th>
      <th>Provider</th>
      <th>Location</th>
      <th>Pickup Date</th>
      <th>Recharge on</th>
      <th>Status</th>
      <th>Remarks</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.user.name%></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.phone_number %></td>
        <td><%= transaction.provider %></td>
        <td><%= transaction.location %></td>
        <td><%= transaction.pickupDate %></td>
        <td><%= transaction.rechargeDate %></td>
        <td><%= transaction.status %></td>
        <td><%= transaction.remarks %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
