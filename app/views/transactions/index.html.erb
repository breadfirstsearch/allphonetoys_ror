<p id="notice"><%= notice %></p>

<h1>Transactions</h1>


<%= form_with(url: transaction_index_path, local: true) do |form| %>

    <table>
      <tr>
        <td> <%= form.label :"Name (contains)" %>
          <%= form.text_field :name, id: :name, value: session[:trans_user_name] %> </td>

        <td><%= form.label :"Amount" %>
          <%= form.text_field :amount, id: :amount, value: session[:trans_amount] %> </td>

        <td>
          <%= form.label :"Phone number" %>
          <%= form.text_field :phoneNumber, id: :phoneNumber, value: session[:trans_phoneNumber] %>
        </td>




      </tr>


      <tr>

        <td><%= form.label :"Transaction Status" %>
          <%= form.text_field :status, id: :status, value: session[:trans_status] %> </td>
        <td> <%= form.label :"Location" %>
          <%= form.text_field :location, id: :location, value: session[:trans_location] %> </td>


        <td>
          <%= form.label :"Provider" %>
          <%= form.number_field :provider, id: :provider, value: session[:trans_provider] %>
        </td>

        <% if false %>

        <td>
          <%= form.label :"Scheduled Pickup Start DateTime" %>
          <%= form.text_field :scheduledPickupStartDT, id: :scheduledPickupStartDT, value: session[:trans_scheduledPickupStartDT] %>
        </td>

        <td> <%= form.label :"Scheduled Pickup End DateTime " %>
          <%= form.number_field :scheduledPickupEndDT, id: :scheduledPickupEndDT, value: session[:trans_scheduledPickupEndDT] %> </td>

      </tr>



      <tr>
        <td> <%= form.label :"Messaged Pickup DateTime " %>
          <%= form.text_field :messagedPickupDT, id: :messagedPickupDT, value: session[:trans_messagedPickupDT] %> </td>

        <td><%= form.label :"Picked Up DateTime " %>
          <%= form.text_field :pickedUpDT, id: :pickedUpDT, value: session[:trans_pickedUpDT] %> </td>

        <td>
          <%= form.label :"Recharge Due DateTime " %>
          <%= form.text_field :rechargeDueDT, id: :rechargeDueDT, value: session[:trans_rechargeDueDT] %>
        </td>

        <td> <%= form.label :"Recharged DateTime  " %>
          <%= form.number_field :rechargedDT, id: :rechargedDT, value: session[:trans_rechargedDT] %> </td>

        <% end %>

      </tr>

    </table>

    <h1>   </h1>
    <div class="actions">
      <%= form.submit "Apply"%>
    </div>


<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Phonenumber</th>
      <th>Provider</th>
      <th>Location</th>
      <th>Status</th>

      <% if false %>
      <th>Scheduledpickupstartdt</th>
      <th>Scheduledpickupenddt</th>
      <th>Messagedpickupdt</th>
      <th>Pickedupdt</th>
      <th>Rechargeduedt</th>
      <th>Rechargeddt</th>
      <th>Remarks</th>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.user.name%></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.phoneNumber %></td>
        <td><%= transaction.provider %></td>
        <td><%= transaction.location %></td>
        <td><%= transaction.status %></td>
        <% if false %>
        <td><%= transaction.scheduledPickupStartDT %></td>
        <td><%= transaction.scheduledPickupEndDT %></td>
        <td><%= transaction.messagedPickupDT %></td>
        <td><%= transaction.pickedUpDT %></td>
        <td><%= transaction.rechargeDueDT %></td>
        <td><%= transaction.rechargedDT %></td>
        <td><%= transaction.remarks %></td>
  <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', adminDashboard_path %>

