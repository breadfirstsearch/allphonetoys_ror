<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Amount</th>
    <th>Phonenumber</th>
    <th>Provider</th>
    <th>Location</th>
    <th>Pickup Date</th>
    <th>Recharge on</th>
    <th>Status</th>
    <th>Remarks</th>
    <th>Action</th>

  </tr>
  </thead>

  <tbody>
  <% @transactions.each do |transaction| %>
      <% if transaction.status=='Picked Up' %>
          <tr style="color:white">
      <% elsif transaction.status=='Recharged' %>
          <tr style="color:black">
      <% else %>
          <tr>
      <% end %>
        <td><%= transaction.user.name%></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.phone_number %></td>
        <td><%= transaction.provider %></td>
        <td><%= transaction.location %></td>
        <td><%= transaction.pickupDate %></td>
        <td><%= transaction.rechargeDate %></td>
        <td><%= transaction.status %></td>
      <td><%= transaction.remarks %></td>
        <td>
          <%= link_to do_recharge_path(transaction), method: "delete" do %>
              <span class="delete-provider">x</span>
          <% end %>
        </td>

      </tr>
  <% end %>
  </tbody>
</table>

<br>
