<%= form_with(model: user, local: true, class:'col-lg-5', id:'signup-form') do |form| %>
    <% if user.errors.any? %>
        <div id="error_explanation">
          <h2>Sorry, please correct the following <%= pluralize(user.errors.count, "error") %> to sign up</h2>

          <ul>
            <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field form-group">
      <%= form.text_field :name, id: :user_name, class:'form-control', type:'text', placeholder:'Full name' %>
    </div>

    <div class="field form-group">
      <%= form.text_field :email, id: :user_email, class:'form-control', type:'email', placeholder:'Email' %>
    </div>

    <div class="field form-group">
      <%= form.text_field :phone, id: :user_phone, class:'form-control', type:'text', placeholder:'Phone number' %>
    </div>

    <div class="small">Choose a password of at least 6 characters</div>

    <div class="field form-group">
      <%= form.password_field :password, class:'form-control', type:'password', placeholder:'Password' %>
    </div>

    <div class="field form-group">
      <%= form.number_field :prefAmount, id: :user_prefAmount, class:'form-control', type:'text', placeholder:'Preferred recharge amount' %>
    </div>

    <div class="field form-group">
      <%= form.select :prefProvider, options_for_select(User::PREF_PROVIDER, params[:prefProvider]), {prompt: 'Select your preferred provider.'}, {class:'form-control'} %>
    </div>

    <div class="field form-group">
      <%= form.select :prefLocation, options_for_select(User::PREF_LOCATION, params[:prefLocation]), {prompt: 'Select your preferred pickup location.'}, {class:'form-control'} %>
    </div>

    <div class="actions">
      <% if !current_user %>
        <%= form.submit "Sign Up",  :class=>'btn btn-primary col-lg-12' %>
      <% else %>
        <%= form.submit "Save",  :class=>'btn btn-primary col-lg-12' %>
      <% end %>
    </div>

<% end %>
