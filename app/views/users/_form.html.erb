    <div class="field form-group-condensed">
      <%= form.number_field :prefAmount, id: :user_prefAmount, class:'form-control', type:'text', placeholder:'Preferred recharge amount' %>
    </div>

    <div class="field form-group-condensed">
      <%= form.select :prefProvider, options_for_select(User.prefProviders.map {|k, v| [k.humanize.capitalize, k]}), {prompt: 'Select your preferred service provider.'}, {class:'form-control'}  %>
    </div>

    <div class="field form-group">
      <%= form.select :prefLocation, options_for_select(User.prefLocations.map {|k, v| [k.humanize.capitalize, k]}), {prompt: 'Select your preferred pickup location.'}, {class:'form-control'}  %>
    </div>

    <div class="actions">
      <% if !current_user %>
        <%= form.submit "Sign Up",  :class=>'btn btn-primary col-lg-12 orange-button' %>
      <% else %>
        <%= form.submit "Save",  :class=>'btn btn-primary col-lg-12 orange-button' %>
      <% end %>
    </div>

<% end %>
